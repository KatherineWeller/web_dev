<% layout('layouts/boilerplate')%>
<h1>Example Header</h1>
<div>
    <a href="/examples/new">Add Example</a>
</div>

<% for (let example of examples){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt="" src="<%= example.image%>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                        <h5 class="card-title"><%= example.title %></h5>
                        <p class="card-text"><%= example.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= example.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/examples/<%=example._id %>">View <%= example.title %></a>
                </div>
            </div>
        </div>
    </div>
<% }%>

