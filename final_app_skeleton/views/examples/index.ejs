<% layout('layouts/boilerplate')%>
<div class="container">
    <h1>Example Header</h1>

    <% for (let example of examples){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(example.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=example.images[0].url%>">
                        <% }else {%>
                        <img class="img-fluid" alt=""
                            src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                            <h5 class="card-title"><%= example.title %></h5>
                            <p class="card-text"><%= example.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= example.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/examples/<%=example._id %>">View <%= example.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% }%>
</div>
